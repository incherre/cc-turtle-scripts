--A script to bring things
--Warning: not reboot safe

while true do
  while turtle.forward() do end
  for i = 1, 16 do
    while not turtle.suck() do
      os.sleep(30)
    end
  end
  
  turtle.turnLeft()
  turtle.turnLeft()
  
  while turtle.forward() do end
  for i = 1, 16 do
    turtle.select(i)
    turtle.drop()
  end
  
  turtle.turnLeft()
  turtle.turnLeft()
end
